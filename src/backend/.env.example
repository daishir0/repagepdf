# RePage PDF - 環境変数設定例
# このファイルを .env にコピーして使用してください

# Application
APP_NAME=RePage PDF
APP_VERSION=1.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8018

# Database
DATABASE_URL=sqlite:///./data/repage.db

# Storage
STORAGE_PATH=./storage
MAX_UPLOAD_SIZE=52428800

# JWT（本番環境では必ず変更してください）
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Default Converter
DEFAULT_CONVERTER=pymupdf

# LLM Models
OPENAI_MODEL=gpt-4o-mini
ANTHROPIC_MODEL=claude-3-haiku-20240307

# API Keys（オプション - 画面から設定可能）
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Encryption Key（Fernetキー - 初回起動時に自動生成）
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# CORS
CORS_ORIGINS=["http://localhost:3013"]
